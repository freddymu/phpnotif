{
    "name": "freddymu/phpnotif",
    "description": "A PHP Package to handle notification inbox using MongoDB. Supporting queuing using Redis or standalone queuing using memory.",
    "keywords": [
        "freddymu",
        "phpnotif"
    ],
    "homepage": "https://github.com/freddymu/phpnotif",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Freddy Munandar",
            "email": "fredhopelane@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "ext-mongodb": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Freddymu\\Phpnotif\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Freddymu\\Phpnotif\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
